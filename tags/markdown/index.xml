width="252"
height="496"
srcset="https://namanh11611.github.io/p/mermaid/flowchart_hu_9a097f81442fa2b4.webp 480w, https://namanh11611.github.io/p/mermaid/flowchart_hu_4852dd2d01bbc216.webp 1024w"
loading="lazy"
alt="Flowchart"
class="gallery-image"
